@model List<CategoryListViewModel>

<div class="row">
    <div class="col-sm-8 container">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Kategoriler</h3>
            </div>
            <div class="card-body">
                <div class="table table-responsive table-responsive-sm">
                    <table class="table table-striped">
                        <thead>

                            <tr>
                                <th style="width:400px">Kategori Resim</th>
                                <th style="width:400px">Kategori Adı</th>
                            </tr>

                        </thead>

                        <tbody>

                            @foreach (var category in Model)
                            {
                                <tr>

                                    <td>
                                        @if (string.IsNullOrWhiteSpace(category.CategoryImage))
                                        {
                                            <img src="~/images/noPhoto.png" style="width:120px; height:120px;border-radius:50px;" />
                                        }
                                        else
                                        {
                                            <img src="~/images/categories/@category.CategoryImage" alt="@category.Name" style="width:120px; height:120px;border-radius:50px;" />
                                        }
                                    </td>

                                    <td style="width:400px">@category.Name</td>
                                    <td>
                                        <a asp-area="Admin" asp-controller="Category" asp-action="Update" asp-route-id="@category.Id" class="btn btn-sm btn-primary"><i class="bi bi-pencil-square"></i> Güncelle</a>
                                        <a asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-sm btn-danger"><i class="bi bi-trash3"></i> Sil</a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer">
                <a asp-controller="Dashboard" asp-action="Index" class="btn btn-sm btn-primary mt-3" style="float:right">Geri Dön</a>
            </div>
        </div>
    </div>
</div>







