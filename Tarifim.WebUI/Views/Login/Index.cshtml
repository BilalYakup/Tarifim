@model LoginViewModel

<div class="container" style="padding-top:50px;width:500px">
    <div class="card" style="border:solid 2px">
        <div class="card-header fw-bold fs-5">
            Hesap Bilgileri
        </div>
        <div class="card-body">

            <form method="post" asp-controller="Auth" asp-action="Login">

                <div>
                    <div>
                        <div class="form-group mt-2">
                            <label asp-for="Email" class="mb-1"></label>
                            <input asp-for="Email" type="text" class="form-control" placeholder="Email" required>

                        </div>
                    </div>
                    <div>
                        <div class="form-group mt-2">
                            <label asp-for="Password" class="mb-1"></label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Şifre" required>


                        </div>
                    </div>

                </div>

                <div class="row">
                    <div>
                        <div class="text-right mt-3">
                            <button type="submit" class="btn btn-warning">Giriş</button>
                            <a asp-controller="Auth" asp-action="Register" type="button" class="btn btn-warning" style="float:right">Kayıt Ol</a>
                        </div>
                    </div>

                </div>
            </form>



        </div>
    </div>
</div>

